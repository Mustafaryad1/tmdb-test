generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  releaseDate DateTime
  rating      Float
  tmdbId      Int      @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
